<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>HEASARC Archive</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/homepage.css" />
  <style>
    body {
      margin: 0;
      font-family: 'Segoe UI', sans-serif;
      background: radial-gradient(circle, #0b0b15 0%, #060612 100%);
      color: #fff;
    }
    .back-button {
      color: aliceblue;
      text-decoration: none;
      text-shadow: 0 0 5px rgb(0, 208, 255);
      position: fixed;
      left: 2rem;
      top: 2rem;
      transition: all 0.3s ease;
      z-index: 1000;
      font-size: 1.2rem;
      padding: 0.8rem 1.5rem;
      background: rgba(0, 0, 0, 0.8);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 8px;
      backdrop-filter: blur(10px);
    }
    .back-button:hover {
      color: rgb(0, 208, 255);
      transform: translateX(-5px);
      border-color: rgb(0, 208, 255);
      box-shadow: 0 0 15px rgba(0, 208, 255, 0.4);
    }
    .section {
      padding: 40px 20px;
    }
    .container {
      max-width: 1000px;
      margin: auto;
    }
    h2 {
      text-align: center;
      margin-bottom: 20px;
    }
    .search-form {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      justify-content: center;
      margin-bottom: 30px;
    }
    .search-form select,
    .search-form input,
    .search-form button {
      padding: 10px;
      border: none;
      border-radius: 10px;
      background: #1c1c2b;
      color: #fff;
      font-size: 1rem;
    }
    .search-form button {
      background-color: #3a3aff;
      cursor: pointer;
    }
    .card-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
      gap: 20px;
    }
    .card {
      background: #111;
      padding: 1rem;
      border-radius: 12px;
      box-shadow: 0 0 12px rgba(0,0,0,0.3);
    }
    .card h3 {
      color: #ffd700;
    }
    .no-results {
      text-align: center;
      margin-top: 20px;
      font-style: italic;
      color: #aaa;
    }
  </style>
</head>
<body>
  <a href="/research" class="back-button">‚Üê Back</a>
  <section class="section">
    <div class="container">
      <h2>üõ∞Ô∏è HEASARC Data Search</h2>

      <form action="/research/heasarc" method="get" class="search-form">
        <select name="table">
          <option value="rosmaster">ROSAT</option>
          <option value="chandra">Chandra</option>
          <option value="swiftmastr">Swift</option>
        </select>
        <input type="text" name="ra" placeholder="RA (hh:mm:ss)" required>
        <input type="text" name="dec" placeholder="Dec (+dd:mm:ss)" required>
        <input type="number" name="radius" placeholder="Radius (¬∞)" step="0.01" value="0.1">
        <button type="submit">Search</button>
      </form>

      <% if (results && results.length > 0) { %>
        <div class="card-grid">
          <% results.forEach(r => { %>
            <div class="card">
              <h3><%= r.name %></h3>
              <p><strong>ObsID:</strong> <%= r.obsid %></p>
              <p><strong>RA:</strong> <%= r.ra %></p>
              <p><strong>Dec:</strong> <%= r.dec %></p>
              <p><strong>Start:</strong> <%= r.start %></p>
              <p><strong>Stop:</strong> <%= r.stop %></p>
            </div>
          <% }) %>
        </div>
      <% } else if (typeof results !== 'undefined') { %>
        <p class="no-results">No results found or data not available.</p>
      <% } %>
    </div>
  </section>
</body>
</html>
