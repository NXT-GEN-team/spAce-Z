<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>NASA Image and Video Library</title>
  <link rel="stylesheet" href="/homepage.css" />
  <style>
    .imgvid-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 20px;
    }
    .imgvid-content {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border-radius: 15px;
      padding: 30px;
      margin: 20px 0;
      border: 1px solid rgba(255, 255, 255, 0.2);
    }
    .imgvid-image {
      max-width: 100%;
      height: auto;
      border-radius: 10px;
      margin: 20px 0;
      box-shadow: 0 0 20px rgba(0, 208, 255, 0.3);
    }
    .imgvid-video {
      width: 100%;
      aspect-ratio: 16/9;
      border-radius: 10px;
      margin: 20px 0;
    }
    .imgvid-title {
      color: #fff;
      font-size: 2rem;
      margin-bottom: 20px;
      text-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
    }
    .imgvid-description {
      color: #ccc;
      line-height: 1.6;
      margin: 20px 0;
      font-size: 1.1rem;
    }
    .imgvid-meta {
      color: #999;
      font-size: 0.9rem;
      margin-top: 20px;
    }
    .error-message {
      color: #ff6b6b;
      text-align: center;
      padding: 20px;
      background: rgba(255, 107, 107, 0.1);
      border-radius: 10px;
      margin: 20px 0;
    }
    .message {
      color: #4CAF50;
      text-align: center;
      padding: 20px;
      background: rgba(76, 175, 80, 0.1);
      border-radius: 10px;
      margin: 20px 0;
    }
    .imgvid-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 20px;
      margin-top: 20px;
    }
    .imgvid-card {
      background: rgba(255, 255, 255, 0.05);
      border-radius: 10px;
      padding: 15px;
      transition: transform 0.3s ease;
    }
    .imgvid-card:hover {
      transform: translateY(-5px);
    }
    .search-form {
      margin-bottom: 30px;
      display: flex;
      gap: 10px;
      flex-wrap: wrap;
    }
    .search-input {
      flex: 1;
      min-width: 200px;
      padding: 10px;
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: 5px;
      background: rgba(255, 255, 255, 0.1);
      color: #fff;
    }
    .search-button {
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      background: rgba(0, 208, 255, 0.3);
      color: #fff;
      cursor: pointer;
      transition: background 0.3s ease;
    }
    .search-button:hover {
      background: rgba(0, 208, 255, 0.5);
    }
    .back-button {
      color: aliceblue;
      text-decoration: none;
      text-shadow: 0 0 5px rgb(0, 208, 255);
      position: fixed;
      left: 2rem;
      top: 2rem;
      transition: all 0.3s ease;
      z-index: 1000;
      font-size: 1.2rem;
      padding: 0.8rem 1.5rem;
      background: rgba(0, 0, 0, 0.8);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 8px;
      backdrop-filter: blur(10px);
    }
    .back-button:hover {
      color: rgb(0, 208, 255);
      transform: translateX(-5px);
      border-color: rgb(0, 208, 255);
      box-shadow: 0 0 15px rgba(0, 208, 255, 0.4);
    }
  </style>
</head>
<body>
  <a href="/astro" class="back-button">‚Üê Back</a>
  <header>
    <div class="title">
      <h1>NASA Image and Video Library</h1>
      <p>Explore NASA's vast collection of images, videos, and audio files</p>
    </div>
  </header>

  <div class="imgvid-container">
    <form class="search-form" action="/astro/imgvid" method="GET">
      <input type="text" name="q" placeholder="Search NASA's media library..." class="search-input" value="<%= typeof query === 'string' ? query : '' %>" />
      <button type="submit" class="search-button">Search</button>
    </form>

    <% if (typeof error === 'string' && error) { %>
      <div class="error-message">
        <h2>Error</h2>
        <p><%= error %></p>
      </div>
    <% } else if (typeof message === 'string' && message) { %>
      <div class="message">
        <p><%= message %></p>
      </div>
    <% } else if (Array.isArray(items) && items.length > 0) { %>
      <div class="imgvid-grid">
        <% items.forEach((item, index) => { %>
          <% if (item && item.data && item.data[0]) { %>
            <div class="imgvid-card">
              <h3 class="imgvid-title"><%= item.data[0].title || 'Untitled' %></h3>
              
              <% if (item.links && item.links[0] && item.links[0].href) { %>
                <% if (item.data[0].media_type === 'image') { %>
                  <img src="<%= item.links[0].href %>" alt="<%= item.data[0].title || 'NASA Image' %>" class="imgvid-image" />
                <% } else if (item.data[0].media_type === 'video') { %>
                  <iframe src="<%= item.links[0].href %>" frameborder="0" allowfullscreen class="imgvid-video"></iframe>
                <% } %>
              <% } %>

              <div class="imgvid-description">
                <%= item.data[0].description || 'No description available' %>
              </div>

              <div class="imgvid-meta">
                <% if (item.data[0].date_created) { %>
                  <p><strong>Date Created:</strong> <%= new Date(item.data[0].date_created).toLocaleDateString() %></p>
                <% } %>
                <p><strong>Center:</strong> <%= item.data[0].center || 'NASA' %></p>
                <p><strong>Type:</strong> <%= item.data[0].media_type || 'Unknown' %></p>
              </div>
            </div>
          <% } %>
        <% }); %>
      </div>
    <% } else if (typeof query === 'string' && query) { %>
      <div class="message">
        <p>No results found for "<%= query %>". Try a different search term.</p>
      </div>
    <% } %>
  </div>


  <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>

  <script src="/starfield.js"></script>
</body>
</html>
