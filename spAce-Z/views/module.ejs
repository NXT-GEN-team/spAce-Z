<%- include('partials/layout', { title: 'Module' }) %>

<div class="container py-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/homepage">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page"><%= moduleId.charAt(0).toUpperCase() + moduleId.slice(1) %></li>
        </ol>
    </nav>

    <div class="row">
        <!-- Sidebar with Topics -->
        <div class="col-md-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Topics</h5>
                </div>
                <div class="list-group list-group-flush">
                    <% 
                    const topics = {
                        'earth': ['Climate Change', 'Weather Patterns', 'Natural Disasters', 'Ecosystems'],
                        'solar-system': ['Planets', 'Moons', 'Asteroids', 'Comets'],
                        'technology': ['Spacecraft', 'Satellites', 'Rovers', 'Space Stations']
                    };
                    const moduleTopics = topics[moduleId] || ['Topic 1', 'Topic 2', 'Topic 3', 'Topic 4'];
                    %>
                    <% moduleTopics.forEach(topic => { %>
                        <a href="#" class="list-group-item list-group-item-action"><%= topic %></a>
                    <% }); %>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <h1 class="mb-4"><%= moduleId.charAt(0).toUpperCase() + moduleId.slice(1) %> Module</h1>
            
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Module Overview</h5>
                    <p class="card-text">
                        <% if (moduleId === 'earth') { %>
                            Explore the fascinating world of Earth science, from climate patterns to natural phenomena.
                        <% } else if (moduleId === 'solar-system') { %>
                            Journey through our solar system and discover the wonders of our cosmic neighborhood.
                        <% } else if (moduleId === 'technology') { %>
                            Learn about the cutting-edge technology that powers space exploration and research.
                        <% } else { %>
                            Welcome to this learning module. Select a topic from the sidebar to begin.
                        <% } %>
                    </p>
                </div>
            </div>

            <!-- Featured Content -->
            <div class="row g-4">
                <% for(let i = 0; i < 3; i++) { %>
                    <div class="col-md-4">
                        <div class="card h-100">
                            <img src="https://images.nasa.gov/images/module-<%= moduleId %>-<%= i + 1 %>.jpg" 
                                 class="card-img-top" 
                                 alt="Module Content">
                            <div class="card-body">
                                <h5 class="card-title">Featured Content <%= i + 1 %></h5>
                                <p class="card-text">Explore this fascinating aspect of <%= moduleId %> science and discovery.</p>
                                <a href="#" class="btn btn-primary">Learn More</a>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div> 