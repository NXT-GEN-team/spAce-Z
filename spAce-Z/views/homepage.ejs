<%- include('partials/layout', { title: 'Home' }) %>

<!-- Hero Section -->
<section class="hero bg-dark text-light py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="display-4">Explore the Universe</h1>
                <p class="lead">Discover the latest news and insights from NASA's space exploration missions.</p>
                <a href="#modules" class="btn btn-primary btn-lg">Start Learning</a>
            </div>
            <div class="col-md-6">
                <img src="https://images.nasa.gov/images/space.jpg" alt="Space" class="img-fluid rounded">
            </div>
        </div>
    </div>
</section>

<!-- Modules Section -->
<section id="modules" class="py-5">
    <div class="container">
        <h2 class="text-center mb-5">Learning Modules</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="https://images.nasa.gov/images/earth.jpg" class="card-img-top" alt="Earth">
                    <div class="card-body">
                        <h5 class="card-title">Earth Science</h5>
                        <p class="card-text">Explore our planet's climate, weather, and natural phenomena.</p>
                        <a href="/module/earth" class="btn btn-primary">Learn More</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="https://images.nasa.gov/images/solar-system.jpg" class="card-img-top" alt="Solar System">
                    <div class="card-body">
                        <h5 class="card-title">Solar System</h5>
                        <p class="card-text">Journey through our cosmic neighborhood and its planets.</p>
                        <a href="/module/solar-system" class="btn btn-primary">Learn More</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="https://images.nasa.gov/images/space-tech.jpg" class="card-img-top" alt="Space Technology">
                    <div class="card-body">
                        <h5 class="card-title">Space Technology</h5>
                        <p class="card-text">Discover the innovations powering space exploration.</p>
                        <a href="/module/technology" class="btn btn-primary">Learn More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- About Us Section -->
<section id="about" class="bg-light py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2 class="mb-4">About NASA News</h2>
                <p class="lead">We're dedicated to bringing you the latest discoveries and developments from NASA's missions and research.</p>
                <p>Our platform provides educational content about space exploration, astronomy, and the latest scientific discoveries. Join us in exploring the wonders of the universe!</p>
            </div>
            <div class="col-md-6">
                <img src="https://images.nasa.gov/images/nasa-logo.jpg" alt="NASA Logo" class="img-fluid rounded">
            </div>
        </div>
    </div>
</section> 